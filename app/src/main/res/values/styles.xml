<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="TextToolBar">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/color_White</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextInKetQua">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextToolbar">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/color_White</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextQuizGame">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/color_White</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextInKetQua2">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">28dp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="TextInKetQua3">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="ButtonInKetQua">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/boder_button_result</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/color_White</item>
    </style>
    <style name="TextInMainScreen_Bold">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ButtonTop">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/boder_button_top</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/color_White</item>
    </style>
    <style name="TextButtonTop">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/Yellow</item>
    </style>
    <style name="ButtonToppp">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>
    <style name="BoderText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/boder_button_top</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/color_White</item>
    </style>
    <style name="boderTextHistory">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/color_White</item>
    </style>
    <style name="Top">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/color_White</item>
    </style>
    <style name="titleTextTersmofuser">
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>
    <style name="contentTextTersmofuser">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/animate_right_left</item>
        <item name="android:windowExitAnimation">@anim/animate_rotate</item>
    </style>

</resources>
