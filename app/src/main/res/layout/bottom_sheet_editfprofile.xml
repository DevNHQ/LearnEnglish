<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical"
    app:behavior_hideable="false"
    app:behavior_peekHeight="90dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">
    <TextView
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp"
        android:layout_width="200dp"
        android:layout_height="4dp"
        android:background="@drawable/boderbuttonlogin"/>
    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_gravity="center_vertical"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/loaduser"
            android:id="@+id/edit_img_user"
             />

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cập nhật thông tin cá nhân"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <View
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#5d5d5d" />

            <EditText
                android:singleLine="true"
                android:imeOptions="actionGo"
                android:background="@drawable/bodereditextquiz"
                android:windowSoftInputMode="adjustPan"
                android:layout_marginTop="5dp"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:paddingBottom="15dp"
                android:id="@+id/edt_edit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:hint="name"/>
        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <Button
            android:textAllCaps="false"
            android:id="@+id/done"
            android:text="Cập nhật"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/boderbuttonlogin"
            style="@style/TextToolbar"
            android:textColor="#fff"
            />
        <Button
            android:textAllCaps="false"
            android:text="Hủy"
            style="@style/TextToolbar"
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/boderbuttonlogin"
            android:textColor="#fff" />
    </LinearLayout>



</LinearLayout>