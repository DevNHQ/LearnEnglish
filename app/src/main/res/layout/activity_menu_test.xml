<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.quiztest.MenuTestActivity">
    <androidx.appcompat.widget.Toolbar
        android:onClick="Back"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_keyboard_backspace_white_24dp"/>
        <TextView
            android:text="Chủ đề ôn tập"
            style="@style/TextToolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            app:cardCornerRadius="3dp"
            app:cardElevation="1dp">
            <LinearLayout
                android:onClick="QuizGame"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_margin="5dp"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/gamelogo"/>
            <TextView
                android:textSize="16dp"
                android:textColor="@color/colorText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trò chơi từ vựng theo chủ đề"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            app:cardCornerRadius="3dp"
            app:cardElevation="1dp">
            <LinearLayout
                android:onClick="QuizGameRandom"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_margin="5dp"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/tuvung"/>
                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/colorText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trò chơi từ vựng ngẫu nhiên"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            app:cardCornerRadius="3dp"
            app:cardElevation="1dp">
            <LinearLayout
                android:onClick="Quiz_Multiplechoice"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_margin="5dp"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/manhinhchao"/>
                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/colorText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đề trắc nghiệm THPT"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>